    <script>
        // Global variables
        let treatmentData = null;
        let patientId = null;
        let queueId = null;

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Extract parameters from URL
            const urlParts = window.location.pathname.split('/');
            patientId = urlParts[3]; // /admin/patients/:id/treatments/:queueId
            queueId = urlParts[5];
            
            if (!patientId || !queueId) {
                showToast('Invalid treatment details URL', 'error');
                setTimeout(() => {
                    window.location.href = '/admin/patients';
                }, 2000);
                return;
            }

            updateUserAvatar();
            loadTreatmentDetails();
            updateNavigationLinks();
        });

        // Update user avatar
        async function updateUserAvatar() {
            try {
                const response = await fetch('/admin/profile/api');
                if (response.ok) {
                    const data = await response.json();
                    const firstLetter = data.email ? data.email.charAt(0).toUpperCase() : 'A';
                    document.getElementById('userAvatar').textContent = firstLetter;
                } else {
                    document.getElementById('userAvatar').textContent = 'A';
                }
            } catch (error) {
                console.error('Error fetching user info:', error);
                document.getElementById('userAvatar').textContent = 'A';
            }
        }

        // Update navigation links with correct patient ID
        function updateNavigationLinks() {
            const backButton = document.getElementById('backButton');
            const patientLink = document.getElementById('patientLink');
            const backToHistoryBtn = document.getElementById('backToHistoryBtn');
            
            if (backButton) {
                backButton.href = `/admin/patients/${patientId}/treatments`;
            }
            if (patientLink) {
                patientLink.href = `/admin/patients/${patientId}/treatments`;
            }
            if (backToHistoryBtn) {
                backToHistoryBtn.href = `/admin/patients/${patientId}/treatments`;
            }
        }

        // Load treatment details
        async function loadTreatmentDetails() {
            const loading = document.getElementById('loading');
            const treatmentCard = document.getElementById('treatmentCard');
            
            loading.style.display = 'block';
            treatmentCard.style.display = 'none';
            
            try {
                // Simulated API call - replace with actual endpoint
                const response = await fetch(`/admin/api/patients/${patientId}/treatments/${queueId}`);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.success) {
                    treatmentData = data.treatment;
                    populateTreatmentDetails();
                } else {
                    throw new Error(data.error || 'Failed to load treatment details');
                }
                
            } catch (error) {
                console.error('Error loading treatment details:', error);
                
                // Fallback with sample data for demonstration
                treatmentData = {
                    queue_id: queueId,
                    date: new Date().toISOString(),
                    treatment_name: 'Tooth Extraction',
                    dentist_name: 'Somchai Toothman',
                    diagnosis: 'Tooth #38 - Impacted wisdom tooth with recurrent pericoronitis. Extracted successfully with minimal complications.',
                    formattedDate: new Date().toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    }),
                    formattedTime: new Date().toLocaleTimeString('en-US', {
                        hour: '2-digit',
                        minute: '2-digit'
                    })
                };
                populateTreatmentDetails();
                showToast('Using sample data - API endpoint not available', 'info');
            } finally {
                loading.style.display = 'none';
                treatmentCard.style.display = 'block';
            }
        }

        // Populate treatment details in the UI
        function populateTreatmentDetails() {
            if (!treatmentData) return;

            // Update page title
            document.getElementById('treatmentTitle').textContent = treatmentData.treatment_name || 'Treatment Details';
            
            // Update appointment information
            document.getElementById('queueId').textContent = `#Y-${treatmentData.queue_id}`;
            document.getElementById('appointmentDate').textContent = treatmentData.formattedDate || 'N/A';
            document.getElementById('appointmentTime').textContent = treatmentData.formattedTime || 'N/A';
            document.getElementById('treatmentName').textContent = treatmentData.treatment_name || 'N/A';
            
            // Update doctor information
            document.getElementById('doctorName').textContent = `Dr. ${treatmentData.dentist_name}` || 'N/A';
            
            // Update diagnosis
            const diagnosisContent = document.getElementById('diagnosisContent');
            if (treatmentData.diagnosis) {
                diagnosisContent.textContent = treatmentData.diagnosis;
            } else {
                diagnosisContent.innerHTML = '<em style="color: #999;">No diagnosis recorded for this treatment session.</em>';
            }
        }

        // Print treatment details
        function printTreatment() {
            const printWindow = window.open('', '_blank');
            const printContent = `
                <!DOCTYPE html>
                <html>
                <head>
                    <title>Treatment Details - Print</title>
                    <style>
                        body { font-family: Arial, sans-serif; padding: 20px; }
                        .header { text-align: center; margin-bottom: 30px; border-bottom: 2px solid #333; padding-bottom: 20px; }
                        .detail-row { margin-bottom: 10px; }
                        .label { font-weight: bold; display: inline-block; width: 150px; }
                        .diagnosis { margin-top: 20px; padding: 15px; background: #f9f9f9; border-left: 4px solid #4A90E2; }
                    </style>
                </head>
                <body>
                    <div class="header">
                        <h1>🦷 Smile Clinic</h1>
                        <h2>Treatment Details Report</h2>
                        <p>Booking ID: #Y-${treatmentData.queue_id}</p>
                    </div>
                    <div class="detail-row"><span class="label">Date:</span> ${treatmentData.formattedDate}</div>
                    <div class="detail-row"><span class="label">Time:</span> ${treatmentData.formattedTime}</div>
                    <div class="detail-row"><span class="label">Treatment:</span> ${treatmentData.treatment_name}</div>
                    <div class="detail-row"><span class="label">Doctor:</span> Dr. ${treatmentData.dentist_name}</div>
                    <div class="diagnosis">
                        <h3>Diagnosis & Clinical Notes:</h3>
                        <p>${treatmentData.diagnosis || 'No diagnosis recorded'}</p>
                    </div>
                    <div style="margin-top: 40px; text-align: center; color: #666; font-size: 12px;">
                        Generated on ${new Date().toLocaleString()}
                    </div>
                </body>
                </html>
            `;
            
            printWindow.document.write(printContent);
            printWindow.document.close();
            printWindow.print();
        }

        // Schedule follow-up appointment
        function scheduleFollowUp() {
            showToast('Redirecting to appointment booking...', 'info');
            // Redirect to appointment booking with pre-filled patient ID
            setTimeout(() => {
                window.location.href = `/admin/appointments/add?patient_id=${patientId}&follow_up=true`;
            }, 1000);
        }

        // Toggle notifications dropdown
        function toggleNotifications() {
            showToast('Notification feature coming soon', 'info');
        }

        // Toggle profile dropdown
        function toggleDropdown() {
            const menu = document.getElementById('profileDropdown');
            menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            // Remove existing toasts
            document.querySelectorAll('.toast').forEach(toast => toast.remove());
            
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <div style="display: flex; align-items: center; gap: 10px;">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(toast);
            
            // Auto remove after 4 seconds
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.style.animation = 'slideOutRight 0.3s ease';
                    setTimeout(() => {
                        if (toast.parentNode) {
                            toast.remove();
                        }
                    }, 300);
                }
            }, 4000);
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            // Close profile dropdown
            const profileDropdown = document.querySelector('.profile-dropdown');
            if (!profileDropdown.contains(event.target)) {
                document.getElementById('profileDropdown').style.display = 'none';
            }
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(event) {
            // ESC to go back
            if (event.key === 'Escape') {
                window.location.href = `/admin/patients/${patientId}/treatments`;
            }
            
            // Ctrl+P to print
            if ((event.ctrlKey || event.metaKey) && event.key === 'p') {
                event.preventDefault();
                printTreatment();
            }
        });

        // Handle online/offline status
        window.addEventListener('online', () => {
            showToast('Connection restored', 'success');
        });

        window.addEventListener('offline', () => {
            showToast('Connection lost', 'error');
        });

        // Auto-refresh functionality (optional)
        let refreshInterval;
        function startAutoRefresh() {
            refreshInterval = setInterval(() => {
                // Auto-refresh treatment data every 5 minutes
                loadTreatmentDetails();
            }, 300000);
        }

        function stopAutoRefresh() {
            if (refreshInterval) {
                clearInterval(refreshInterval);
            }
        }

        // Start auto-refresh when page is visible
        document.addEventListener('visibilitychange', function() {
            if (document.hidden) {
                stopAutoRefresh();
            } else {
                startAutoRefresh();
            }
        });

        // Error handling for navigation
        window.addEventListener('error', function(e) {
            console.error('JavaScript error:', e.error);
            showToast('An unexpected error occurred', 'error');
        });

        // Page performance monitoring
        window.addEventListener('load', function() {
            const loadTime = performance.now();
            console.log(`Treatment details page loaded in ${Math.round(loadTime)}ms`);
        });
    </script>
</body>
