                            <span class="detail-label">Specialty:</span>
                            <span class="detail-value" id="doctorSpecialty">General Dentistry</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Next Appointment:</span>
                            <span class="detail-value" id="nextAppointment">Not scheduled</span>
                        </div>
                    </div>

                    <!-- Diagnosis & Notes -->
                    <div class="detail-section diagnosis-section">
                        <h3>
                            <i class="fas fa-stethoscope"></i>
                            Diagnosis & Clinical Notes
