                    method: 'DELETE'
                });

                if (response.ok) {
                    const data = await response.json();
                    if (data.success) {
                        showToast('Appointment cancelled successfully', 'success');
                        loadAppointments();
                    } else {
                        showToast(data.error || 'Failed to cancel appointment', 'error');
                    }
                } else {
                    showToast('Failed to cancel appointment', 'error');
                }
