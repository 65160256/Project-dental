        // Password strength validation
        function setupPasswordValidation() {
            const passwordInput = document.getElementById('password');
            const confirmInput = document.getElementById('confirmPassword');
            const strengthFill = document.getElementById('strengthFill');
            const strengthText = document.getElementById('strengthText');

            passwordInput.addEventListener('input', function() {
                const password = this.value;
                const strength = calculatePasswordStrength(password);
                
                strengthFill.className = `strength-fill ${strength.level}`;
                strengthText.className = `strength-text ${strength.level}`;
                strengthText.textContent = strength.text;
            });

            confirmInput.addEventListener('input', function() {
                validatePasswordMatch();
            });

            passwordInput.addEventListener('input', function() {
                if (confirmInput.value) {
                    validatePasswordMatch();
                }
            });
        }

        // Calculate password strength
        function calculatePasswordStrength(password) {
            if (password.length === 0) {
                return { level: '', text: 'Enter password' };
            }
            
            let score = 0;
            
            if (password.length >= 6) score++;
            if (password.length >= 8) score++;
            if (/[A-Z]/.test(password)) score++;
            if (/[a-z]/.test(password)) score++;
            if (/[0-9]/.test(password)) score++;
            if (/[^A-Za-z0-9]/.test(password)) score++;

            if (score < 3) return { level: 'weak', text: 'Weak password' };
            if (score < 4) return { level: 'fair', text: 'Fair password' };
            if (score < 5) return { level: 'good', text: 'Good password' };
            return { level: 'strong', text: 'Strong password' };
        }

        // Validate password match
        function validatePasswordMatch() {
            const password = document.getElementById('password').value;
            const confirm = document.getElementById('confirmPassword').value;
            const confirmGroup = document.getElementById('confirmPassword').parentElement;

            if (confirm && password !== confirm) {
                confirmGroup.classList.add('error');
                confirmGroup.classList.remove('success');
            } else if (confirm && password === confirm) {
                confirmGroup.classList.remove('error');
                confirmGroup.classList.add('success');
            } else {
                confirmGroup.classList.remove('error', 'success');
            }
        }

        // Setup form validation
        function setupFormValidation() {
            const form = document.getElementById('addDentistForm');
            const inputs = form.querySelectorAll('.form-control[required]');

            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    validateField(this);
                });

                input.addEventListener('input', function() {
                    // Clear error state on input (ยกเว้นช่องอีเมลและบัตรประชาชนถ้ากำลัง submit)
                    if (!isSubmitting && this.parentElement.classList.contains('error')) {
                        this.parentElement.classList.remove('error');
                    }
                });
            });

            // Name validation (First Name and Last Name) - only letters and Thai characters
            const fnameInput = document.getElementById('fname');
            const lnameInput = document.getElementById('lname');
            
            [fnameInput, lnameInput].forEach(input => {
                if (input) {
                    // Handle input event
                    input.addEventListener('input', function(e) {
                        let value = this.value;
                        let cursorPos = this.selectionStart;
                        
                        // Remove all numbers and invalid characters, keep only letters, Thai, spaces, hyphens, apostrophes, dots
                        let cleanValue = value.replace(/[^a-zA-Zก-๏\s\-'\.]/g, '');
                        
                        // Remove excessive spaces
                        cleanValue = cleanValue.replace(/\s+/g, ' ');
                        
                        // Update value if it changed
                        if (cleanValue !== value) {
                            this.value = cleanValue;
                            // Try to maintain cursor position
                            let newCursorPos = cursorPos - (value.length - cleanValue.length);
                            this.setSelectionRange(Math.max(0, newCursorPos), Math.max(0, newCursorPos));
                            
                            // Show temporary warning
                            showTemporaryTooltip(this, 'Only letters are allowed in names');
                        }
                        
                        if (!isSubmitting) {
                            // Delay validation slightly to avoid flickering
                            setTimeout(() => validateNameField(this), 100);
                        }
                    });

                    // Handle keypress event (prevent typing invalid characters)
                    input.addEventListener('keypress', function(e) {
                        const char = e.key;
                        
                        // Allow control keys (backspace, delete, arrow keys, etc.)
                        if (e.ctrlKey || e.metaKey || e.altKey || 
                            ['Backspace', 'Delete', 'Tab', 'Enter', 'ArrowLeft', 'ArrowRight', 'ArrowUp', 'ArrowDown', 'Home', 'End'].includes(char)) {
                            return true;
                        }
                        
                        // Check if character is valid (letters, Thai characters, space, hyphen, apostrophe, dot)
                        if (!/[a-zA-Zก-๏\s\-'\.]/.test(char)) {
                            e.preventDefault();
                            showTemporaryTooltip(this, `"${char}" is not allowed in names`);
                            
                            // Add shake effect
                            this.classList.add('invalid-input');
                            setTimeout(() => {
                                this.classList.remove('invalid-input');
                            }, 500);
                            
                            return false;
                        }
                        
                        // Prevent multiple consecutive spaces
                        if (char === ' ' && this.value.slice(-1) === ' ') {
                            e.preventDefault();
                            showTemporaryTooltip(this, 'Multiple spaces not allowed');
                            return false;
                        }
                    });

                    // Handle paste event
                    input.addEventListener('paste', function(e) {
                        e.preventDefault();
                        
                        // Get pasted text
                        let pastedText = (e.clipboardData || window.clipboardData).getData('text');
                        
                        // Clean the pasted text
                        let cleanText = pastedText.replace(/[^a-zA-Zก-๏\s\-'\.]/g, '').replace(/\s+/g, ' ');
                        
                        // Insert cleaned text at cursor position
                        let start = this.selectionStart;
                        let end = this.selectionEnd;
                        let currentValue = this.value;
                        
                        this.value = currentValue.substring(0, start) + cleanText + currentValue.substring(end);
                        
                        // Set cursor position after inserted text
                        let newCursorPos = start + cleanText.length;
                        this.setSelectionRange(newCursorPos, newCursorPos);
                        
                        // Show message if text was cleaned
                        if (cleanText !== pastedText) {
                            showTemporaryTooltip(this, 'Invalid characters were removed from pasted text');
                        }
                        
                        // Trigger validation
                        if (!isSubmitting) {
                            setTimeout(() => validateNameField(this), 100);
                        }
                    });
                }
            });

            // ID Card validation with duplicate checking
            const id_cardInput = document.getElementById('id_card');
            let idCardCheckTimeout;
            
            if (id_cardInput) {
                id_cardInput.addEventListener('input', function() {
                    // Only allow numbers and limit to 13 digits
                    this.value = this.value.replace(/\D/g, '').substring(0, 13);
                    
                    // Clear previous timeout
                    if (idCardCheckTimeout) {
                        clearTimeout(idCardCheckTimeout);
                    }
                    
                    // Don't check during submission
                    if (isSubmitting) return;
                    
                    // Remove error/success state immediately when typing
                    this.parentElement.classList.remove('error', 'success');
                    
                    // Check ID card availability after user stops typing
                    if (this.value && this.value.length === 13) {
                        idCardCheckTimeout = setTimeout(() => {
                            if (!isSubmitting) {
                                checkIdCardAvailability(this.value);
                            }
                        }, 800);
                    } else if (this.value.length > 0 && !isSubmitting) {
                        // Show validation for incomplete ID card
                        validateField(this);
                    }
                });
                
                id_cardInput.addEventListener('blur', function() {
                    if (!isSubmitting && this.value) {
                        if (this.value.length === 13) {
                            checkIdCardAvailability(this.value);
                        } else {
                            validateField(this);
                        }
                    }
                });
            }

            // Phone validation
            const phoneInput = document.getElementById('phone');
            if (phoneInput) {
                phoneInput.addEventListener('input', function() {
                    this.value = this.value.replace(/\D/g, '').substring(0, 10);
                    if (!isSubmitting) {
                        validateField(this);
                    }
                });
            }

            // Email validation with debounced checking
            const emailInput = document.getElementById('email');
            let emailCheckTimeout;
            
            if (emailInput) {
                emailInput.addEventListener('input', function() {
                    // Clear previous timeout
                    if (emailCheckTimeout) {
                        clearTimeout(emailCheckTimeout);
                    }
                    
                    // Don't check during submission
                    if (isSubmitting) return;
                    
                    // Remove error state immediately when typing
                    this.parentElement.classList.remove('error', 'success');
                    
                    // Check email availability after user stops typing
                    if (this.value && isValidEmail(this.value)) {
                        emailCheckTimeout = setTimeout(() => {
                            if (!isSubmitting) {
                                checkEmailAvailability(this.value);
                            }
                        }, 800);
                    }
                });
                
                emailInput.addEventListener('blur', function() {
                    if (!isSubmitting && this.value && isValidEmail(this.value)) {
                        checkEmailAvailability(this.value);
                    }
                });
            }
        }

        // Validate name fields (only letters allowed)
        function validateNameField(field) {
            const group = field.parentElement;
            const value = field.value.trim();
            const errorMsg = group.querySelector('.error-message');
            const fieldName = field.labels[0]?.textContent.replace(' *', '') || 'Name';

            group.classList.remove('error', 'success');

            if (field.hasAttribute('required') && !value) {
                group.classList.add('error');
                errorMsg.textContent = `${fieldName} is required`;
                return false;
            }

            if (value && value.length < 2) {
                group.classList.add('error');
                errorMsg.textContent = `${fieldName} must be at least 2 characters`;
                return false;
            }

            if (value && value.length > 50) {
                group.classList.add('error');
                errorMsg.textContent = `${fieldName} must not exceed 50 characters`;
                return false;
            }

            // Check for valid characters (letters, Thai characters, spaces, hyphens, apostrophes, dots)
            if (value && !/^[a-zA-Zก-๏\s\-'\.]+$/.test(value)) {
                group.classList.add('error');
                errorMsg.textContent = `${fieldName} can only contain letters`;
                return false;
            }

            // Check for excessive spaces or special characters
            if (value && /\s{2,}/.test(value)) {
                group.classList.add('error');
                errorMsg.textContent = `${fieldName} cannot contain multiple consecutive spaces`;
                return false;
            }

            if (value && /^[\s\-'\.]+$/.test(value)) {
                group.classList.add('error');
                errorMsg.textContent = `${fieldName} must contain actual letters`;
                return false;
            }

            if (value) {
                group.classList.add('success');
            }
            return true;
        }

        // Validate individual field
        function validateField(field) {
            const group = field.parentElement;
            const value = field.value.trim();
            const errorMsg = group.querySelector('.error-message');

            // Don't validate if user is still typing
            if (field === document.activeElement && value.length > 0) {
                return true;
            }

            group.classList.remove('error', 'success');

            // Handle name fields with special validation
            if (field.name === 'fname' || field.name === 'lname') {
                return validateNameField(field);
            }

            if (field.hasAttribute('required') && !value) {
                group.classList.add('error');
                errorMsg.textContent = `${field.labels[0]?.textContent.replace(' *', '') || 'Field'} is required`;
                return false;
            }

            // Specific validations
            if (field.type === 'email' && value && !isValidEmail(value)) {
                group.classList.add('error');
                errorMsg.textContent = 'Please enter a valid email address';
                return false;
            }

            if (field.name === 'id_card' && value) {
                if (value.length !== 13) {
                    group.classList.add('error');
                    errorMsg.textContent = 'ID card must be exactly 13 digits';
                    return false;
                }
                if (!/^\d{13}$/.test(value)) {
                    group.classList.add('error');
                    errorMsg.textContent = 'ID card must contain only numbers';
                    return false;
                }
            }

            if (field.name === 'phone' && value) {
                if (value.length < 9 || value.length > 10) {
                    group.classList.add('error');
                    errorMsg.textContent = 'Phone number must be 9-10 digits';
                    return false;
                }
                if (!/^[0-9]+$/.test(value)) {
                    group.classList.add('error');
                    errorMsg.textContent = 'Phone number must contain only numbers';
                    return false;
                }
            }

            if (field.name === 'dob' && value) {
                const birthDate = new Date(value);
                const today = new Date();
                const age = today.getFullYear() - birthDate.getFullYear();
                
                if (age < 18) {
                    group.classList.add('error');
                    errorMsg.textContent = 'Dentist must be at least 18 years old';
                    return false;
                }
                if (age > 80) {
                    group.classList.add('error');
                    errorMsg.textContent = 'Please enter a valid birth date';
                    return false;
                }
            }

            if (field.name === 'password' && value) {
                if (value.length < 6) {
                    group.classList.add('error');
                    errorMsg.textContent = 'Password must be at least 6 characters';
                    return false;
                }
            }

            group.classList.add('success');
            return true;
        }

        // Email validation
        function isValidEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }

        // Check ID card availability
        async function checkIdCardAvailability(idCard) {
            if (!idCard || idCard.length !== 13 || isSubmitting) return;

            const idCardGroup = document.getElementById('id_card').parentElement;
            const errorMsg = idCardGroup.querySelector('.error-message');
            
            // Show checking state
            idCardGroup.classList.add('checking');
            idCardGroup.classList.remove('error', 'success');

            try {
                console.log('🆔 Checking ID card availability:', idCard);
                
                const response = await fetch(`/admin/api/check-id-card?id_card=${encodeURIComponent(idCard)}`);
                
                if (response.ok) {
                    const data = await response.json();
                    console.log('🆔 ID card check result:', data);
                    
                    if (!data.success) {
                        idCardGroup.classList.add('error');
                        if (errorMsg) {
                            errorMsg.textContent = data.error || 'Failed to check ID card';
                        }
                    } else if (!data.valid) {
                        idCardGroup.classList.add('error');
                        if (errorMsg) {
                            errorMsg.textContent = data.message || 'Invalid ID card format';
                        }
                    } else if (data.exists) {
                        idCardGroup.classList.add('error');
                        if (errorMsg) {
                            errorMsg.textContent = data.message || 'ID card is already registered';
                        }
                        
                        // Show additional info about where it was found
                        if (data.foundIn) {
                            showToast(`ID card already exists in ${data.foundIn}`, 'warning');
                        }
                    } else {
                        idCardGroup.classList.add('success');
                        console.log('✅ ID card is available');
                    }
                } else {
                    console.log('⚠️ ID card check failed:', response.status);
                    idCardGroup.classList.add('error');
                    if (errorMsg) {
                        errorMsg.textContent = 'Failed to verify ID card';
                    }
                }
            } catch (error) {
                console.error('⚠️ ID card check network error:', error);
                idCardGroup.classList.add('error');
                if (errorMsg) {
                    errorMsg.textContent = 'Network error while checking ID card';
                }
            } finally {
                idCardGroup.classList.remove('checking');
            }
        }

        // Check email availability
        async function checkEmailAvailability(email) {
            if (!email || !isValidEmail(email) || isSubmitting) return;

            const emailGroup = document.getElementById('email').parentElement;
            const errorMsg = emailGroup.querySelector('.error-message');
            
            // Show checking state
            emailGroup.classList.add('checking');
            emailGroup.classList.remove('error', 'success');

            try {
                console.log('📧 Checking email availability:', email);
                
                const response = await fetch(`/admin/api/check-email?email=${encodeURIComponent(email)}`);
                
                if (response.ok) {
                    const data = await response.json();
                    console.log('📧 Email check result:', data);
                    
                    if (!data.success) {
                        emailGroup.classList.add('error');
                        if (errorMsg) {
                            errorMsg.textContent = data.error || 'Failed to check email';
                        }
                    } else if (!data.valid) {
                        emailGroup.classList.add('error');
                        if (errorMsg) {
                            errorMsg.textContent = data.message || 'Invalid email format';
                        }
                    } else if (data.exists) {
                        emailGroup.classList.add('error');
                        if (errorMsg) {
                            errorMsg.textContent = data.message || 'Email address is already in use';
                        }
                    } else {
                        emailGroup.classList.add('success');
                        console.log('✅ Email is available');
                    }
                } else {
                    console.log('⚠️ Email check failed:', response.status);
                    emailGroup.classList.add('error');
                    if (errorMsg) {
                        errorMsg.textContent = 'Failed to verify email';
                    }
                }
            } catch (error) {
                console.error('⚠️ Email check network error:', error);
                emailGroup.classList.add('error');
                if (errorMsg) {
                    errorMsg.textContent = 'Network error while checking email';
                }
            } finally {
                emailGroup.classList.remove('checking');
            }
