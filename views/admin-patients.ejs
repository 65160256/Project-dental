        .stats-info {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #666;
            font-size: 14px;
        }

        .stats-info i {
            color: #4A90E2;
            font-size: 16px;
        }

        .filter-section {
            display: flex;
            gap: 10px;
