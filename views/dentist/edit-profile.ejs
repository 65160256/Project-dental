    <script>
        function toggleDropdown() {
            const menu = document.getElementById('profileDropdown');
            menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
        }
        
        function toggleNotifications() {
            alert('Notifications feature coming soon!');
        }
        
        document.addEventListener('click', function (e) {
            const prof = document.querySelector('.profile-dropdown');
            if (!prof.contains(e.target)) {
                document.getElementById('profileDropdown').style.display = 'none';
            }
        });

        function changeProfilePicture() {
            alert('Profile picture upload feature will be available soon!');
        }

        // Form submission handling
        document.getElementById('editProfileForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            fetch('/dentist/profile/update', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à‡πÅ‡∏•‡∏∞ redirect
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-success';
                    alertDiv.textContent = 'Profile updated successfully!';
                    
                    const container = document.querySelector('.profile-content');
                    container.insertBefore(alertDiv, container.firstChild.nextSibling);
                    
                    // Scroll to top ‡πÅ‡∏•‡∏∞ redirect ‡∏´‡∏•‡∏±‡∏á 2 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
                    window.scrollTo(0, 0);
                    setTimeout(() => {
                        window.location.href = '/dentist/profile';
                    }, 2000);
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while updating profile');
            });
        });
    </script>
