            <!-- Content Grid -->
            <div class="content-grid">
                <!-- Appointments Section -->
                <div class="appointments-section">
                    <div class="section-header">
                        <h2>Recent Appointments</h2>
                        <div class="controls">
                            <button class="filter-btn" onclick="showFilters()">
                                <i class="fas fa-filter"></i> Filters
                            </button>
                            <a href="/dentist/appointments" class="add-btn">
                                <i class="fas fa-calendar-plus"></i> View All
                            </a>
                        </div>
                    </div>
                    <div class="table-container">
                        <table>
                            <thead>
                                <tr>
                                    <th>Date & Time</th>
                                    <th>Patient</th>
                                    <th>Treatment</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="appointmentsTableBody">
                                <% latestAppointments.forEach(function(apt) { %>
                                <tr>
                                    <td>
                                        <div style="font-weight: 600; margin-bottom: 2px;">
                                            <%= new Date(apt.time).toLocaleDateString('en-GB') %>
                                        </div>
                                        <div style="font-size: 12px; color: var(--text-secondary);">
                                            <%= new Date(apt.time).toLocaleTimeString('th-TH', {hour: '2-digit', minute: '2-digit'}) %>
                                        </div>
                                    </td>
                                    <td>
                                        <div style="font-weight: 600;">
                                            <%= apt.fname %> <%= apt.lname %>
                                        </div>
                                    </td>
