<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dentist Dashboard</title>
  <link rel="stylesheet" href="/css/dentist-dashboard.css"/>
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="logo">
        <img src="/img/tooth-logo.png" alt="Smile Clinic"/>
        <h3>Smile Clinic</h3>
      </div>
      <ul class="nav">
        <li class="active">Dashboard</li>
        <li>Work Schedule</li>
        <li>Appointments</li>
        <li>Patients</li>
        <li>History</li>
      </ul>
    </div>

    <!-- Main -->
    <div class="main">
      <div class="top-bar">
        <div class="search-bar">
          <input type="text" placeholder="Firstname or Lastname..." />
        </div>
        <div class="icons">
          <img src="/img/notification-bell.png" alt="Notifications"/>
          <div class="profile">
            <p>Hello Dr. Somsri</p>
            <span>dentist</span>
          </div>
        </div>
      </div>

      <div class="dashboard">
        <h1>Hello Dr. Somsri</h1>
        <p>24/05/2025 11:00 AM</p>

        <div class="stats">
          <div class="card"><p>Patients Today</p><h2><%= todayPatients %></h2></div>
          <div class="card"><p>Total Patients</p><h2><%= totalPatients %></h2></div>
          <div class="card"><p>Cancel</p><h2><%= cancelAppointments %></h2></div>
        </div>

        <div class="alert-box">
          <div class="alert-icon">!</div>
          <div class="alert-text">
            <p><strong>เวรวันนี้</strong></p>
            <p><strong>Treatment:</strong> <%= todayTreatment %></p>
          </div>
          <a href="#">View Details</a>
        </div>

        <div class="latest-patients">
          <h3>Latest Patients</h3>
          <table>
            <thead>
              <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Name</th>
                <th>Treatment</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% latestPatients.forEach(function(patient) { %>
                <tr>
                  <td><%= patient.date %></td>
                  <td><%= patient.time %></td>
                  <td><%= patient.name %></td>
                  <td><%= patient.treatment_name %></td>
                  <td><%= patient.status %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Calendar -->
    <div class="calendar">
      <div class="calendar-header">
        <h2>April 2025</h2>
        <div class="calendar-nav">
          <button>&lt;</button>
          <button>&gt;</button>
        </div>
      </div>

      <div class="calendar-days">
        <div class="day selected">Sun 7</div>
        <div class="day">Mon 8</div>
        <div class="day">Tue 9</div>
        <div class="day">Wed 10</div>
        <div class="day">Thu 11</div>
        <div class="day">Fri 12</div>
        <div class="day">Sat 13</div>
      </div>

      <div class="upcoming">
        <h4>Upcoming Appointments</h4>
        <% upcomingAppointments.forEach(function(appointment) { %>
          <div class="appointment <%= appointment.active ? 'active' : '' %>">
            <p><strong><%= appointment.name %></strong><br/><%= appointment.treatment_name %></p>
            <span><%= appointment.time %></span>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</body>
</html>
