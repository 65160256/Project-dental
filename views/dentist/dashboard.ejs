                            <div style="text-align: center; color: var(--text-secondary); padding: 20px; font-size: 14px;">
                                No upcoming appointments
                            </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Working Hours -->
                    <div class="panel-card">
                        <div class="working-hours">
                            <h4>Today's Working Hours</h4>
                            <div class="time">
                                <i class="fas fa-clock"></i>
                                <span>
                                    <%= dentist.work_start ? dentist.work_start.substring(0,5) : '08:00' %> - 
                                    <%= dentist.work_end ? dentist.work_end.substring(0,5) : '16:00' %>
                                </span>
