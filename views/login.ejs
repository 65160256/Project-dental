<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dentistry Login</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    .container {
      display: flex;
      height: 100vh;
    }

    .left {
      flex: 1;
    }

    .left img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .right {
      flex: 1;
      background-color: white;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .form-box {
      width: 320px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h2 {
      text-align: center;
      font-size: 22px;
      font-weight: 600;
      margin-bottom: 5px;
    }

    .subtitle {
      font-size: 14px;
      color: #555;
      margin-bottom: 15px;
    }

    .tab-toggle {
      display: flex;
      border: 1px solid #ccc;
      border-radius: 6px;
      overflow: hidden;
      margin-bottom: 25px;
    }

    .tab-btn {
      padding: 8px 28px;
      font-size: 15px;
      font-weight: 500;
      color: black;
      background-color: white;
      border: none;
      outline: none;
      cursor: pointer;
      text-decoration: none; /* ← ลบขีดใต้ */
    }

    .tab-btn:first-child {
      background-color: #d9d9d9;
      border-right: 1px solid #ccc;
    }

    form {
      width: 100%;
      display: flex;
      flex-direction: column;
    }

    label {
      font-size: 13px;
      margin-bottom: 5px;
    }

    input {
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 4px;
      margin-bottom: 15px;
      background-color: #eaeaea;
    }

    .forgot {
      font-size: 12px;
      color: #777;
      text-align: right;
      margin: -10px 0 25px;
    }

    .confirm-btn {
      padding: 12px;
      background-color: #0051ff;
      color: white;
      font-size: 14px;
      font-weight: bold;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .password-wrapper {
      position: relative;
      display: flex;
      align-items: center;
    }

    .password-wrapper input {
      width: 100%;
      padding-right: 40px;
    }

    .toggle-password {
      position: absolute;
      right: 10px;
      color: #666;
      cursor: pointer;
      font-size: 18px;
    }

    .alert {
      padding: 12px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
      font-weight: bold;
    }

    .alert.success {
      background-color: #d4edda;
      color: #155724;
    }

    .alert.error {
      background-color: #f8d7da;
      color: #721c24;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="left">
      <img src="/img/dentist.jpg" alt="Dentist" />
    </div>
    <div class="right">
      <div class="form-box">
        <h2>Dentistry</h2>
        <p class="subtitle">Login</p>
        
        <div class="tab-toggle">
          <a href="/register" class="tab-btn tab-left active">Register</a>
          <a href="/login" class="tab-btn tab-right">Login</a>
        </div>
        
        <form action="/login" method="post">
          <label>Email:</label>
          <input type="email" name="email" required>
          
          <label>Password:</label>
          <div class="password-wrapper">
            <input type="password" name="password" id="password">
            <i class="fa-solid fa-eye toggle-password" onclick="togglePassword()"></i>
          </div>
          
          <p class="forgot">Forgot Password</p>
          
          <button type="submit" class="confirm-btn">Confirm</button>
          
          <% if (messages.success && messages.success.length > 0) { %>
            <div class="alert success"><%= messages.success[0] %></div>
          <% } %>
          <% if (messages.error && messages.error.length > 0) { %>
            <div class="alert error"><%= messages.error[0] %></div>
          <% } %>
        </form>
      </div>
    </div>
  </div>
  
  <script>
    function togglePassword() {
      const passwordInput = document.getElementById("password");
      const icon = document.querySelector(".toggle-password");
      
      const isHidden = passwordInput.type === "password";
      passwordInput.type = isHidden ? "text" : "password";
      
      icon.classList.toggle('fa-eye');
      icon.classList.toggle('fa-eye-slash');
    }
  </script>
</body>
</html>