<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dentistry - Login</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/css/login/login.css">
</head>
<body>
  <div class="container">
    <div class="left">
      <img src="/img/dentist.jpg" alt="Dental clinic interior" />
    </div>
    
    <div class="right">
      <div class="form-box">
        <div class="brand">
          <h2>Dentistry</h2>
          <p class="subtitle">Login</p>
        </div>
        
        <div class="tab-toggle">
          <a href="/register" class="tab-btn">Register</a>
          <a href="/login" class="tab-btn active">Login</a>
        </div>
        
        <!-- Display Messages -->
        <% if (message) { %>
          <div class="alert success">
            <%= message %>
          </div>
        <% } %>
        
        <% if (error) { %>
          <div class="alert error">
            <%= error %>
          </div>
        <% } %>
        
        <div class="form-container">
          <form id="loginForm" action="/login" method="POST" novalidate>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="form-control" 
                placeholder="Enter your email"
                required
                autocomplete="email"
                aria-describedby="email-error"
              >
            </div>
            
            <div class="form-group">
              <label for="password">Password</label>
              <div class="password-wrapper">
                <input 
                  type="password" 
                  id="password" 
                  name="password" 
                  class="form-control" 
                  placeholder="Enter your password"
                  required
                  minlength="6"
                  autocomplete="current-password"
                  aria-describedby="password-error"
                >
                <i class="fas fa-eye toggle-password" onclick="togglePassword()" aria-label="Toggle password visibility"></i>
              </div>
            </div>
            
            <div class="form-footer">
              <a href="/forgot-password" class="forgot-password">Forgot Password?</a>
            </div>
            
            <button type="submit" class="btn-primary" id="loginBtn">
              Confrim
            </button>
            
            <div class="loading" id="loading">
              <div class="spinner"></div>
              Signing you in...
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <script src="/js/login/login.js"></script>

</body>
</html>