            searchInput.value = `${fname} ${lname} - ${phone}`;
            
            // Hide dropdown
            dropdown.style.display = 'none';
            
            // Store selected patient
            selectedPatientId.value = patientId;
            selectedPatientName.textContent = `${fname} ${lname} (${phone})`;
            selectedPatientInfo.style.display = 'block';
            
            // Enable next button if all required fields are filled
            validateStep2();
            
            showAlert(`Patient ${fname} ${lname} selected`, 'success');
            
            // Smooth scroll to treatment selection
            document.querySelector('.patient-form').scrollIntoView({ 
                behavior: 'smooth', 
