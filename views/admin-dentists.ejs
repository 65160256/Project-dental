    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-icon">
                    <i class="fas fa-trash"></i>
                </div>
                <h3 class="modal-title">Confirm Deletion</h3>
            </div>
            <div class="modal-message" id="deleteMessage">
                Are you sure you want to delete this dentist? This action cannot be undone.
            </div>
            <div class="modal-actions">
                <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                <button class="btn btn-delete" id="confirmDeleteBtn">Delete Dentist</button>
            </div>
        </div>
    </div>

    <script>
        // Real data from database
        let dentistsData = [];

        let currentDeleteId = null;
        let filteredDentists = [...dentistsData];

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            loadDentists();
            setupFilters();
            setupSearch();
            updateUserAvatar();
        });

        // Load dentists data from database
        async function loadDentists() {
            const loading = document.getElementById('loading');
            const tableSection = document.getElementById('tableSection');
            const emptyState = document.getElementById('emptyState');
            
            loading.style.display = 'block';
            tableSection.style.display = 'none';
            emptyState.style.display = 'none';
            
            try {
                const response = await fetch('/admin/api/dentists');
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.success) {
                    dentistsData = data.dentists;
                    filteredDentists = [...dentistsData];
                } else {
                    throw new Error(data.error || 'Failed to load dentists');
                }
                
            } catch (error) {
                console.error('Error loading dentists:', error);
                showToast('Failed to load dentists: ' + error.message, 'error');
                dentistsData = [];
                filteredDentists = [];
            } finally {
                loading.style.display = 'none';
                
                if (filteredDentists.length === 0) {
                    emptyState.style.display = 'block';
                } else {
                    tableSection.style.display = 'block';
                    renderDentistsTable();
                }
                
                updateStats();
            }
        }

        // Render dentists table
        function renderDentistsTable() {
            const tbody = document.getElementById('dentistsTableBody');
            
            tbody.innerHTML = filteredDentists.map(dentist => {
                const initials = (dentist.fname.charAt(0) + dentist.lname.charAt(0)).toUpperCase();
                
                return `
                    <tr data-id="${dentist.dentist_id}">
                        <td>
                            <div class="dentist-info">
                                <div class="dentist-avatar">${initials}</div>
                                <div class="dentist-details">
                                    <h4>Dr. ${dentist.fname} ${dentist.lname}</h4>
                                    <p>${dentist.email}</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="specialty-badge">${dentist.specialty || 'General Practice'}</span>
                        </td>
                        <td>${dentist.phone || 'N/A'}</td>
                        <td>${dentist.education || 'Not specified'}</td>
                        <td>
                            <div class="action-buttons">
                                <a href="dentists/${dentist.dentist_id}" class="btn-sm btn-view">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a href="dentists/${dentist.dentist_id}/edit" class="btn-sm btn-edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="dentists/${dentist.dentist_id}/schedule" class="btn-sm btn-schedule">
                                    <i class="fas fa-calendar"></i> Schedule
                                </a>
                                <button class="btn-sm btn-delete" onclick="confirmDelete(${dentist.dentist_id}, '${dentist.fname}', '${dentist.lname}')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        // Update statistics
        function updateStats() {
            document.getElementById('totalDentists').textContent = filteredDentists.length;
        }

        // Setup filters
        function setupFilters() {
            const specialtyFilter = document.getElementById('specialtyFilter');
            const statusFilter = document.getElementById('statusFilter');
            
            specialtyFilter.addEventListener('change', applyFilters);
            statusFilter.addEventListener('change', applyFilters);
        }

        // Apply filters with database field names
        function applyFilters() {
            const specialtyFilter = document.getElementById('specialtyFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            
            filteredDentists = dentistsData.filter(dentist => {
                const matchesSpecialty = !specialtyFilter || dentist.specialty === specialtyFilter;
                const matchesStatus = !statusFilter; // No status field in DB, so ignore this filter for now
                const matchesSearch = !searchTerm || 
                    dentist.fname.toLowerCase().includes(searchTerm) ||
                    dentist.lname.toLowerCase().includes(searchTerm) ||
                    dentist.email.toLowerCase().includes(searchTerm) ||
                    (dentist.specialty && dentist.specialty.toLowerCase().includes(searchTerm));
                
                return matchesSpecialty && matchesStatus && matchesSearch;
            });
            
            renderDentistsTable();
            updateStats();
            
            // Show/hide empty state
            const tableSection = document.getElementById('tableSection');
            const emptyState = document.getElementById('emptyState');
            
            if (filteredDentists.length === 0) {
                tableSection.style.display = 'none';
                emptyState.style.display = 'block';
            } else {
                tableSection.style.display = 'block';
                emptyState.style.display = 'none';
            }
        }

        // Setup search
        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', applyFilters);
        }

        // Update user avatar with first letter of admin email/username
        async function updateUserAvatar() {
            try {
                // Fetch current user info from session/profile
                const response = await fetch('/admin/profile/api');
                if (response.ok) {
                    const data = await response.json();
                    const firstLetter = data.email ? data.email.charAt(0).toUpperCase() : 'A';
                    document.getElementById('userAvatar').textContent = firstLetter;
                } else {
                    // Fallback to 'A' for admin
                    document.getElementById('userAvatar').textContent = 'A';
                }
            } catch (error) {
                console.error('Error fetching user info:', error);
                document.getElementById('userAvatar').textContent = 'A';
            }
        }

        // Refresh data from database
        async function refreshData() {
            showToast('Refreshing dentists data...', 'info');
            await loadDentists();
            showToast('Data refreshed successfully', 'success');
        }

        // Confirm delete
        function confirmDelete(id, fname, lname) {
            currentDeleteId = id;
            const modal = document.getElementById('deleteModal');
            const message = document.getElementById('deleteMessage');
            
            message.textContent = `Are you sure you want to delete Dr. ${fname} ${lname}? This will also remove all associated schedules and appointments. This action cannot be undone.`;
            modal.style.display = 'flex';
        }

        // Close modal
        function closeModal() {
            const modal = document.getElementById('deleteModal');
            modal.style.display = 'none';
            currentDeleteId = null;
        }

        // Delete dentist with API call
        document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
            if (currentDeleteId) {
                try {
                    const response = await fetch(`/admin/api/dentists/${currentDeleteId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Remove from local data and refresh display
                        const dentistIndex = dentistsData.findIndex(d => d.dentist_id === currentDeleteId);
                        if (dentistIndex > -1) {
                            const deletedDentist = dentistsData[dentistIndex];
                            dentistsData.splice(dentistIndex, 1);
                            
                            applyFilters();
                            showToast(result.message || `Dr. ${deletedDentist.fname} ${deletedDentist.lname} deleted successfully`, 'success');
                        }
                    } else {
                        throw new Error(result.error || 'Failed to delete dentist');
                    }
                    
                } catch (error) {
                    console.error('Error deleting dentist:', error);
                    showToast('Error deleting dentist: ' + error.message, 'error');
                }
                
                closeModal();
            }
        });

        // Toggle notifications dropdown
        function toggleNotifications() {
            const dropdown = document.getElementById('notificationDropdown');
            const isVisible = dropdown.classList.contains('show');
            
            if (isVisible) {
                dropdown.classList.remove('show');
            } else {
                dropdown.classList.add('show');
                // Load notifications from database
                loadNotifications();
            }
        }

        // Load notifications
        async function loadNotifications() {
            try {
                // In real implementation, fetch from API
                const notificationContent = document.getElementById('notificationContent');
                notificationContent.innerHTML = `
                    <div style="padding: 20px; text-align: center; color: #666;">
                        <i class="fas fa-bell-slash" style="font-size: 24px; margin-bottom: 10px; color: #ccc;"></i>
                        <p>No new notifications</p>
                    </div>
                `;
                
                // Update badge
                const badge = document.getElementById('notificationBadge');
                badge.classList.remove('show');
            } catch (error) {
                console.error('Error loading notifications:', error);
                showToast('Failed to load notifications', 'error');
            }
        }

        // Toggle profile dropdown
        function toggleDropdown() {
            const menu = document.getElementById('profileDropdown');
            menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'exclamation-triangle' : 'info-circle'}"></i>
                ${message}
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideOutRight 0.3s ease';
                setTimeout(() => {
                    if (toast.parentNode) {
                        toast.remove();
                    }
                }, 300);
            }, 3000);
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            // Close profile dropdown
            const profileDropdown = document.querySelector('.profile-dropdown');
            if (!profileDropdown.contains(event.target)) {
                document.getElementById('profileDropdown').style.display = 'none';
            }
            
            // Close notification dropdown
            const notificationContainer = document.querySelector('.notification-container');
            if (!notificationContainer.contains(event.target)) {
                document.getElementById('notificationDropdown').classList.remove('show');
            }
            
            // Close modal
            const modal = document.getElementById('deleteModal');
            if (event.target === modal) {
                closeModal();
            }
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(event) {
            // ESC to close modal
            if (event.key === 'Escape') {
                closeModal();
                document.getElementById('notificationDropdown').classList.remove('show');
                document.getElementById('profileDropdown').style.display = 'none';
            }
            
            // Ctrl+F to focus search
            if (event.ctrlKey && event.key === 'f') {
                event.preventDefault();
                document.getElementById('searchInput').focus();
            }
        });

        // Auto-refresh functionality
        setInterval(() => {
            // In real implementation, check for updates
            console.log('Auto-checking for updates...');
        }, 60000); // Check every minute

        // Handle connection status
        window.addEventListener('online', function() {
            showToast('Connection restored', 'success');
        });

        window.addEventListener('offline', function() {
            showToast('Connection lost', 'error');
        });
    </script>
