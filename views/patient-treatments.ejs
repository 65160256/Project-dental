<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Treatment History</title>
  <link rel="stylesheet" href="/css/patient-treatments.css" />
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
  <div class="sidebar">
    <div class="logo"><img src="/img/logo.png" alt="Smile Clinic" /></div>
    <ul>
      <li><a href="/admin/dashboard">Schedule</a></li>
      <li><a href="/admin/appointments">Appointments</a></li>
      <li><a href="/admin/dentists">Dentists</a></li>
      <li class="active"><a href="/admin/patients">Patients</a></li>
      <li><a href="/admin/treatments">Treatments</a></li>
    </ul>
  </div>

  <div class="main">
    <div class="header">
      <h2>Treatment History</h2>
      <div class="top-right">
        <img src="/img/notification-bell.png" class="icon" />
        <div class="profile-dropdown">
          <div class="user-info" onclick="toggleDropdown()">
            <img src="/img/user-icon.png" class="avatar" />
            <div>
              <strong>Hello Admin</strong><br /><small>admin</small>
            </div>
            <i class="fas fa-caret-down"></i>
          </div>
          <div class="dropdown-menu" id="profileDropdown" style="display:none;">
            <a href="/profile">My Profile</a><hr />
            <a href="/logout">Log Out</a>
          </div>
        </div>
      </div>
    </div>

    <div class="filter-bar">
      <label>Search by Date:</label>
      <input type="date" id="searchDate" onchange="filterByDate()" />
    </div>

    <% for (let year in groupedHistory) { %>
      <h3><%= year %></h3>
      <div class="treatment-list">
        <% groupedHistory[year].forEach(item => { %>
          <div class="treatment-item" onclick="location.href='/admin/patients/<%= patientId %>/treatments/<%= item.queueId %>'" data-date="<%= item.date %>">
            <span><%= item.day %> <%= item.month %></span>
            <span><%= item.treatment %></span>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script>
    function toggleDropdown() {
      const menu = document.getElementById('profileDropdown');
      menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    document.addEventListener('click', function (e) {
      const prof = document.querySelector('.profile-dropdown');
      if (!prof.contains(e.target)) {
        document.getElementById('profileDropdown').style.display = 'none';
      }
    });

    function filterByDate() {
      const selected = document.getElementById('searchDate').value;
      document.querySelectorAll('.treatment-item').forEach(el => {
        el.style.display = el.dataset.date === selected ? 'flex' : 'none';
      });
    }
  </script>
</body>
</html>
