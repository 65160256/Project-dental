    <!-- Main Content -->
    <div class="main">
        <!-- Top Bar -->
        <div class="top-bar">
            <div class="breadcrumb">
                <a href="/admin/patients">Patients</a>
                <i class="fas fa-chevron-right"></i>
                <span id="patientName">Treatment History</span>
            </div>
            <div class="user-section">
