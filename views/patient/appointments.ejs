<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Book an Appointment</title>
  <link rel="stylesheet" href="/css/patient-appointments.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
  <div class="sidebar">
    <div class="logo">
      <img src="/img/logo.png" alt="Smile Clinic" />
    </div>
    <ul>
      <li><a href="/patient/dashboard">Dashboard</a></li>
      <li class="active"><a href="/patient/appointments">Appointment</a></li>
      <li><a href="/patient/history">History</a></li>
      <li><a href="/patient/my-treatments">My Treatments</a></li>
      <li><a href="/patient/dentists">Dentists</a></li>
    </ul>
  </div>

  <div class="main">
    <div class="top-bar">
      <h2>Book an appointment</h2>
      <div class="user-section">
        <img src="/img/notification-bell.png" class="notification-icon" onclick="toggleNotifications()" />
        <div class="profile-dropdown">
          <div class="user-info" onclick="toggleDropdown()">
            <img src="/img/user-icon.png" class="avatar"/>
            <div>
              <strong>Hello <%= patient.fname %> <%= patient.lname %></strong><br />
              <small>patient</small>
            </div>
            <i class="fas fa-caret-down"></i>
          </div>
          <div class="dropdown-menu" id="profileDropdown">
            <a href="/patient/profile">My Profile</a>
            <hr />
            <a href="/logout">Log Out</a>
          </div>
        </div>
      </div>
    </div>

    <div class="calendar-controls">
      <button class="arrow-btn" onclick="navigateDate(-1)"><i class="fas fa-chevron-left"></i></button>
      <h3 id="date-title"><%= new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></h3>
      <button class="arrow-btn" onclick="navigateDate(1)"><i class="fas fa-chevron-right"></i></button>
      <div class="view-buttons">
        <button class="active">day</button>
        <button disabled>week</button>
        <button disabled>month</button>
      </div>
    </div>

    <div class="time-grid">
      <% for (let hour = 10; hour <= 20; hour++) { %>
        <div class="time-slot">
          <div class="hour"><%= hour %>am</div>
          <div class="appointments-cell">
            <% appointments.forEach(a => {
                const aptHour = new Date(a.time).getHours();
                if (aptHour === hour) { %>
                  <div class="appointment-box <%= a.colorClass %>">
                    <strong><%= a.patient_fname %> <%= a.patient_lname %></strong><br/>
                    <small>â€¢ <%= a.treatment_name %></small>
                  </div>
            <%  } }); %>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    function toggleDropdown() {
      const menu = document.getElementById('profileDropdown');
      menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    function navigateDate(offset) {
      const currentDate = new Date("<%= date %>");
      currentDate.setDate(currentDate.getDate() + offset);
      const yyyy = currentDate.getFullYear();
      const mm = String(currentDate.getMonth() + 1).padStart(2, '0');
      const dd = String(currentDate.getDate()).padStart(2, '0');
      const newDateStr = `${yyyy}-${mm}-${dd}`;
      window.location.href = `/patient/appointments?date=${newDateStr}`;
    }

    document.addEventListener('click', function (e) {
      const prof = document.querySelector('.profile-dropdown');
      if (!prof.contains(e.target)) {
        document.getElementById('profileDropdown').style.display = 'none';
      }
    });
  </script>
</body>
</html>
