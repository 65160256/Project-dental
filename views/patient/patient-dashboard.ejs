<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Patient Dashboard - <%= patient.fname %> <%= patient.lname %></title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f5f7fa;
    }

    .sidebar {
      width: 180px;
      background: linear-gradient(135deg, #4A90E2, #2DA8FF);
      position: fixed;
      height: 100vh;
      padding: 0;
      color: #fff;
      box-shadow: 2px 0 10px rgba(0,0,0,0.1);
      z-index: 1000;
    }

    .sidebar .logo {
      text-align: center;
      padding: 20px;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .sidebar .logo img {
      width: 50px;
      height: 50px;
      border-radius: 8px;
      background: white;
      padding: 8px;
    }

    .sidebar .logo h3 {
      margin: 10px 0 0 0;
      font-size: 16px;
      font-weight: 600;
    }

    .sidebar ul {
      list-style: none;
      padding: 10px 0;
      margin: 0;
    }

    .sidebar ul li {
      margin: 2px 0;
    }

    .sidebar ul li a {
      display: block;
      padding: 12px 20px;
      color: rgba(255,255,255,0.9);
      text-decoration: none;
      transition: all 0.3s ease;
      font-size: 14px;
      border-radius: 0;
    }

    .sidebar ul li.active a,
    .sidebar ul li:hover a {
      background-color: rgba(255,255,255,0.2);
      color: white;
      border-radius: 8px;
      margin: 0 10px;
      transform: translateX(5px);
    }

    .sidebar ul li a i {
      margin-right: 10px;
      width: 16px;
      text-align: center;
    }

    .main {
      margin-left: 180px;
      padding: 0;
      min-height: 100vh;
    }

    .top-bar {
      background: white;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      position: sticky;
      top: 0;
      z-index: 999;
    }

    .search-section {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .search-section label {
      font-weight: 500;
      color: #555;
      font-size: 14px;
    }

    .search-box {
      background: #f8f9fa;
      border: 2px solid #e1e5e9;
      border-radius: 25px;
      padding: 10px 20px;
      display: flex;
      align-items: center;
      width: 280px;
      transition: all 0.3s ease;
    }

    .search-box:focus-within {
      border-color: #4A90E2;
      box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.1);
    }

    .search-box i {
      color: #666;
      margin-right: 10px;
      font-size: 14px;
    }

    .search-box input {
      border: none;
      background: transparent;
      outline: none;
      width: 100%;
      font-size: 14px;
    }

    .user-section {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .notification-wrapper {
      position: relative;
    }

    .notification-icon {
      width: 20px;
      height: 20px;
      cursor: pointer;
      color: #666;
      transition: color 0.3s ease;
    }

    .notification-icon:hover {
      color: #4A90E2;
    }

    .notification-badge {
      position: absolute;
      top: -5px;
      right: -5px;
      background: #dc3545;
      color: white;
      border-radius: 50%;
      width: 16px;
      height: 16px;
      font-size: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
    }

    .profile-dropdown {
      position: relative;
    }

    .user-info {
      display: flex;
      align-items: center;
      cursor: pointer;
      gap: 12px;
      padding: 8px 12px;
      border-radius: 8px;
      transition: background-color 0.3s ease;
    }

    .user-info:hover {
      background-color: #f8f9fa;
    }

    /* Gmail-style Avatar */
    .avatar {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 14px;
      color: white;
      text-transform: uppercase;
      position: relative;
      overflow: hidden;
    }

    .avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .avatar.has-image {
      background: none;
    }

    .avatar.no-image {
      background: linear-gradient(135deg, #4A90E2, #2DA8FF);
    }

    .user-details strong {
      display: block;
      font-size: 14px;
      color: #333;
      font-weight: 600;
    }

    .user-details small {
      color: #666;
      font-size: 12px;
    }

    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      top: 100%;
      background: white;
      border: 1px solid #e1e5e9;
      border-radius: 8px;
      min-width: 180px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.15);
      z-index: 1000;
      overflow: hidden;
    }

    .dropdown-menu a {
      display: flex;
      align-items: center;
      padding: 12px 16px;
      text-decoration: none;
      color: #333;
      font-size: 14px;
      transition: background-color 0.3s ease;
    }

    .dropdown-menu a i {
      margin-right: 10px;
      width: 16px;
      color: #666;
    }

    .dropdown-menu a:hover {
      background-color: #f8f9fa;
    }

    .dropdown-menu hr {
      margin: 0;
      border: none;
      border-top: 1px solid #e1e5e9;
    }

    .content {
      padding: 30px;
    }

    .welcome-section {
      margin-bottom: 30px;
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .welcome-section h1 {
      font-size: 28px;
      color: #333;
      margin: 0 0 8px 0;
      font-weight: 700;
    }

    .welcome-section p {
      color: #666;
      margin: 0;
      font-size: 14px;
      display: flex;
      align-items: center;
    }

    .welcome-section p i {
      margin-right: 8px;
      color: #4A90E2;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(135deg, #4A90E2, #2DA8FF);
    }

    .stat-card h3 {
      font-size: 24px;
      margin: 0 0 5px 0;
      color: #333;
      font-weight: 700;
    }

    .stat-card p {
      color: #666;
      margin: 0;
      font-size: 14px;
    }

    .next-appointment {
      background: linear-gradient(135deg, #e8f4fd, #f0f9ff);
      border: 1px solid #b3d9f7;
      border-radius: 12px;
      padding: 25px;
      margin-bottom: 30px;
      position: relative;
      overflow: hidden;
    }

    .next-appointment::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 4px;
      height: 100%;
      background: #4A90E2;
    }

    .next-appointment h2 {
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 18px;
      margin: 0 0 15px 0;
      color: #333;
      font-weight: 600;
    }

    .next-appointment h2 i {
      color: #4A90E2;
      font-size: 20px;
    }

    .appointment-details {
      margin-bottom: 15px;
    }

    .appointment-details p {
      margin: 8px 0;
      color: #555;
      font-size: 14px;
      display: flex;
      align-items: center;
    }

    .appointment-details p strong {
      margin-right: 8px;
      color: #333;
      min-width: 80px;
    }

    .view-details {
      position: absolute;
      top: 25px;
      right: 25px;
      color: #4A90E2;
      text-decoration: none;
      font-size: 14px;
      font-weight: 500;
      padding: 8px 16px;
      border: 1px solid #4A90E2;
      border-radius: 6px;
      transition: all 0.3s ease;
    }

    .view-details:hover {
      background: #4A90E2;
      color: white;
    }

    .appointments-section {
      margin-bottom: 30px;
    }

    .section-header {
      display: flex;
      justify-content: between;
      align-items: center;
      margin-bottom: 20px;
      background: white;
      padding: 20px 25px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .section-header h2 {
      font-size: 20px;
      margin: 0;
      color: #333;
      font-weight: 600;
    }

    .controls {
      display: flex;
      gap: 12px;
    }

    .filter-btn, .add-btn {
      background: #4A90E2;
      border: none;
      color: white;
      padding: 10px 18px;
      border-radius: 8px;
      text-decoration: none;
      font-size: 14px;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.3s ease;
      font-weight: 500;
    }

    .filter-btn {
      background: #f8f9fa;
      color: #666;
      border: 2px solid #e1e5e9;
    }

    .filter-btn:hover {
      background: #e9ecef;
      border-color: #4A90E2;
      color: #4A90E2;
    }

    .add-btn:hover {
      background: #357abd;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(74, 144, 226, 0.3);
    }

    .table-wrapper {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background: #f8f9fa;
    }

    th {
      padding: 16px 20px;
      text-align: left;
      font-weight: 600;
      color: #555;
      font-size: 14px;
      border-bottom: 1px solid #e1e5e9;
    }

    td {
      padding: 16px 20px;
      border-bottom: 1px solid #f1f3f4;
      color: #555;
      font-size: 14px;
    }

    tbody tr:hover {
      background-color: #f8f9fa;
    }

    .status-badge {
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 500;
      text-transform: capitalize;
    }

    .status-pending {
      background: #fff3cd;
      color: #856404;
    }

    .status-confirm {
      background: #d4edda;
      color: #155724;
    }

    .status-cancel {
      background: #f8d7da;
      color: #721c24;
    }

    .bottom-panels {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
    }

    .treatment-history, .dentists-today {
      background: white;
      border-radius: 12px;
      padding: 25px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .treatment-history h2, .dentists-today h2 {
      font-size: 18px;
      margin: 0 0 20px 0;
      color: #333;
      font-weight: 600;
    }

    .treatment-card {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 20px;
      position: relative;
      border-left: 4px solid #4A90E2;
    }

    .treatment-card p {
      margin: 8px 0;
      color: #555;
      font-size: 14px;
    }

    .treatment-card strong {
      color: #333;
    }

    .treatment-card .view-details {
      position: absolute;
      bottom: 20px;
      right: 20px;
    }

    .dentist-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 15px;
    }

    .dentist-card {
      text-align: center;
      padding: 20px;
      background: #f8f9fa;
      border-radius: 12px;
      transition: all 0.3s ease;
    }

    .dentist-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .dentist-card .avatar {
      width: 70px;
      height: 70px;
      margin: 0 auto 15px;
      font-size: 18px;
    }

    .dentist-card p {
      margin: 0;
      font-size: 13px;
      color: #555;
      font-weight: 500;
    }

    .empty-state {
      text-align: center;
      padding: 40px;
      color: #666;
    }

    .empty-state i {
      font-size: 48px;
      color: #ddd;
      margin-bottom: 16px;
    }

    .quick-actions {
      display: flex;
      gap: 15px;
      margin-top: 20px;
      flex-wrap: wrap;
    }

    .quick-action {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 12px 20px;
      background: white;
      border: 2px solid #e1e5e9;
      border-radius: 8px;
      text-decoration: none;
      color: #555;
      font-size: 14px;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .quick-action:hover {
      border-color: #4A90E2;
      color: #4A90E2;
      transform: translateY(-2px);
    }

    .quick-action i {
      font-size: 16px;
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 100%;
        height: auto;
        position: relative;
      }
      
      .main {
        margin-left: 0;
      }
      
      .bottom-panels {
        grid-template-columns: 1fr;
      }

      .stats-grid {
        grid-template-columns: 1fr;
      }
      
      .controls {
        flex-direction: column;
      }

      .quick-actions {
        flex-direction: column;
      }
    }

    /* Loading states */
    .loading {
      opacity: 0.6;
      pointer-events: none;
    }

    .skeleton {
      background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
      background-size: 200% 100%;
      animation: loading 1.5s infinite;
    }

    @keyframes loading {
      0% { background-position: 200% 0; }
      100% { background-position: -200% 0; }
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="logo">
      <img src="/img/logo.png" alt="Smile Clinic" />
      <h3>Smile Clinic</h3>
    </div>
    <ul>
      <li class="active"><a href="/patient/dashboard"><i class="fas fa-tachometer-alt"></i>Dashboard</a></li>
      <li><a href="/patient/appointments"><i class="fas fa-calendar-check"></i>Appointments</a></li>
      <li><a href="/patient/history"><i class="fas fa-history"></i>History</a></li>
      <li><a href="/patient/my-treatments"><i class="fas fa-stethoscope"></i>My Treatments</a></li>
      <li><a href="/patient/dentists"><i class="fas fa-user-md"></i>Dentists</a></li>
    </ul>
  </div>

  <div class="main">
    <div class="top-bar">
      <div class="search-section">
        <label>Search:</label>
        <div class="search-box">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Search appointments, treatments..." />
        </div>
      </div>
      <div class="user-section">
        <div class="notification-wrapper">
          <i class="fas fa-bell notification-icon" onclick="toggleNotifications()"></i>
          <div class="notification-badge" style="display: none;">3</div>
        </div>
        <div class="profile-dropdown">
          <div class="user-info" onclick="toggleDropdown()">
            <div class="avatar no-image">
              <%= patient.fname.charAt(0) + patient.lname.charAt(0) %>
            </div>
            <div class="user-details">
              <strong><%= patient.fname %> <%= patient.lname %></strong>
              <small>Patient</small>
            </div>
            <i class="fas fa-caret-down"></i>
          </div>
          <div class="dropdown-menu" id="profileDropdown">
            <a href="/patient/profile"><i class="fas fa-user"></i>My Profile</a>
            <a href="/patient/profile/change-password"><i class="fas fa-key"></i>Change Password</a>
            <hr />
            <a href="/logout"><i class="fas fa-sign-out-alt"></i>Log Out</a>
          </div>
        </div>
      </div>
    </div>

    <div class="content">
      <div class="welcome-section">
        <h1>Welcome back, <%= patient.fname %>!</h1>
        <p><i class="fas fa-calendar-day"></i><%= currentDate %></p>
        
        <div class="quick-actions">
          <a href="/patient/appointments" class="quick-action">
            <i class="fas fa-plus"></i>
            Book Appointment
          </a>
          <a href="/patient/dentists" class="quick-action">
            <i class="fas fa-search"></i>
            Find Dentist
          </a>
          <a href="/patient/history" class="quick-action">
            <i class="fas fa-history"></i>
            View History
          </a>
        </div>
      </div>

      <div class="stats-grid">
        <div class="stat-card">
          <h3><%= appointments.length %></h3>
          <p>Total Appointments</p>
        </div>
        <div class="stat-card">
          <h3>1</h3>
          <p>Upcoming Visits</p>
        </div>
        <div class="stat-card">
          <h3><%= dentists.length %></h3>
          <p>Available Dentists</p>
        </div>
      </div>

      <div class="next-appointment">
        <h2><i class="fas fa-calendar-check"></i>Next Appointment</h2>
        <% if (nextAppointment) { %>
          <div class="appointment-details">
            <p><strong>Date:</strong> <%= new Date(nextAppointment.time).toLocaleDateString('en-GB', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></p>
            <p><strong>Time:</strong> <%= new Date(nextAppointment.time).toLocaleTimeString([], {hour: '2-digit', minute: '2-digit'}) %></p>
            <p><strong>Treatment:</strong> <%= nextAppointment.treatment %></p>
            <p><strong>Dentist:</strong> Dr. <%= nextAppointment.dentist %></p>
            <p><strong>Status:</strong> <span class="status-badge status-<%= nextAppointment.queue_status %>"><%= nextAppointment.queue_status %></span></p>
          </div>
          <a href="/patient/history/details/<%= nextAppointment.queue_id %>" class="view-details">View Details</a>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-calendar-times"></i>
            <p>No upcoming appointments</p>
          </div>
        <% } %>
      </div>

      <div class="appointments-section">
        <div class="section-header">
          <h2>Recent Appointments</h2>
          <div class="controls">
            <button class="filter-btn"><i class="fas fa-filter"></i>Filter</button>
            <a href="/patient/appointments" class="add-btn"><i class="fas fa-plus"></i>New Appointment</a>
          </div>
        </div>
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>Date & Time</th>
                <th>Treatment</th>
                <th>Dentist</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (appointments.length > 0) { %>
                <% appointments.forEach(function(apt) { %>
                  <tr>
                    <td>
                      <%= new Date(apt.time).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) %><br>
                      <small style="color: #666;"><%= new Date(apt.time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></small>
                    </td>
                    <td><%= apt.treatment %></td>
                    <td>Dr. <%= apt.dentist %></td>
                    <td><span class="status-badge status-<%= apt.queue_status %>"><%= apt.queue_status %></span></td>
                    <td>
                      <a href="/patient/history/details/<%= apt.queue_id %>" style="color: #4A90E2; text-decoration: none; font-size: 12px;">
                        <i class="fas fa-eye"></i> View
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="5">
                    <div class="empty-state">
                      <i class="fas fa-calendar"></i>
                      <p>No appointments found</p>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="bottom-panels">
        <div class="treatment-history">
          <h2>Treatment History</h2>
          <% if (treatmentHistory) { %>
            <div class="treatment-card">
              <p><strong>Treatment:</strong> <%= treatmentHistory.treatment %></p>
              <p><strong>Dentist:</strong> Dr. <%= treatmentHistory.dentist %></p>
              <p><strong>Diagnosis:</strong> <%= treatmentHistory.diagnosis %></p>
              <% if (treatmentHistory.followUpdate) { %>
                <p><strong>Follow-up:</strong> <%= treatmentHistory.followUpdate %></p>
              <% } %>
              <a href="/patient/my-treatments" class="view-details">View All</a>
            </div>
          <% } else { %>
            <div class="empty-state">
              <i class="fas fa-notes-medical"></i>
              <p>No treatment history available</p>
            </div>
          <% } %>
        </div>

        <div class="dentists-today">
          <h2>Dentists Today</h2>
          <% if (dentists.length > 0) { %>
            <div class="dentist-cards">
              <% dentists.forEach(function(dentist) { %>
                <div class="dentist-card">
                  <% if (dentist.photo && dentist.photo !== 'default-avatar.png') { %>
                    <div class="avatar has-image">
                      <img src="/uploads/<%= dentist.photo %>" alt="<%= dentist.name %>" />
                    </div>
                  <% } else { %>
                    <div class="avatar no-image">
                      <%= dentist.name.split(' ').map(n => n.charAt(0)).join('') %>
                    </div>
                  <% } %>
                  <p><strong>Dr. <%= dentist.name %></strong></p>
                  <% if (dentist.specialty) { %>
                    <p style="font-size: 11px; color: #888;"><%= dentist.specialty %></p>
                  <% } %>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <div class="empty-state">
              <i class="fas fa-user-md"></i>
              <p>No dentists available today</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

