            const fieldNames = {
                fname: 'First Name',
                lname: 'Last Name',
                phone: 'Phone Number',
                specialty: 'Specialty',
                education: 'Education',
                address: 'Address',
                email: 'Email Address',
                idcard: 'ID Card Number',
                dob: 'Date of Birth',
                photo: 'Profile Photo',
                password: 'Password'
