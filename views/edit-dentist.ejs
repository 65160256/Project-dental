
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Dentist Information</title>
  <link rel="stylesheet" href="/css/edit-dentist.css" />
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
  <div class="sidebar">
    <div class="logo"><img src="/img/logo.png" alt="Smile Clinic" /></div>
    <ul>
      <li><a href="/admin/schedule">Schedule</a></li>
      <li><a href="/admin/appointments">Appointments</a></li>
      <li class="active"><a href="/admin/dentists">Dentists</a></li>
      <li><a href="/admin/patients">Patients</a></li>
      <li><a href="/admin/treatments">Treatments</a></li>
    </ul>
  </div>

  <div class="main">
    <div class="header">
      <h2>Edit Dentist Information</h2>
      <div class="top-right">
        <img src="/img/notification-bell.png" />
        <div class="profile-dropdown">
          <div class="user-info" onclick="toggleDropdown()">
            <img src="/img/user-icon.png" class="avatar" />
            <div>
              <strong>Hello Admin</strong><br />
              <small>admin</small>
            </div>
            <i class="fas fa-caret-down"></i>
          </div>
          <div class="dropdown-menu" id="profileDropdown" style="display:none;">
            <a href="/admin/profile">My Profile</a>
            <hr />
            <a href="/logout">Log Out</a>
          </div>
        </div>
      </div>
    </div>

    <form action="/admin/dentists/<%= dentist.dentist_id %>/edit" method="POST" enctype="multipart/form-data" class="form-container">
      <div class="left-section">
        <div class="image-preview">
          <img id="photoPreview" src="/uploads/<%= dentist.photo %>" alt="Preview" />
        </div>
        <input type="file" name="photo" id="photoUpload" accept="image/*" hidden />
        <label for="photoUpload" class="btn-blue">+ Upload Photo</label>
      </div>

      <div class="right-section">
        <h3>Personal Information</h3>
        <div class="form-group">
          <label>Firstname <span class="required">*</span></label>
          <input type="text" name="fname" value="<%= dentist.fname %>" required />
        </div>
        <div class="form-group">
          <label>Lastname <span class="required">*</span></label>
          <input type="text" name="lname" value="<%= dentist.lname %>" required />
        </div>
        <div class="form-group">
          <label>Date of Birth <span class="required">*</span></label>
          <input type="date" name="dob" value="<%= dentist.dob ? new Date(dentist.dob).toISOString().split('T')[0] : '' %>" required />
        </div>
        <div class="form-group">
          <label>ID Card Number <span class="required">*</span></label>
          <input type="text" name="idcard" value="<%= dentist.idcard %>" required />
        </div>
        <div class="form-group">
          <label>Specialist <span class="required">*</span></label>
          <input type="text" name="specialty" value="<%= dentist.specialty %>" required />
        </div>
        <div class="form-group">
          <label>Educational Background</label>
          <textarea name="education" rows="2"><%= dentist.education %></textarea>
        </div>

        <h3>Contact Information</h3>
        <div class="form-group">
          <label>Address</label>
          <textarea name="address" rows="2"><%= dentist.address %></textarea>
        </div>
        <div class="form-group">
          <label>Phone <span class="required">*</span></label>
          <input type="text" name="phone" value="<%= dentist.phone %>" required />
        </div>

        <h3>Login Information</h3>
        <div class="form-group">
          <label>Email <span class="required">*</span></label>
          <input type="email" name="email" value="<%= dentist.email %>" required />
        </div>
        <div class="form-group">
          <label>New Password</label>
          <input type="password" name="password" />
        </div>
        <div class="form-group">
          <label>Confirm Password</label>
          <input type="password" name="confirmPassword" />
        </div>

        <div class="buttons">
          <button type="submit" class="btn-green">Confirm</button>
          <a href="/admin/dentists" class="btn-red">Cancel</a>
        </div>
      </div>
    </form>
  </div>

  <script>
    const photoInput = document.getElementById('photoUpload');
    const photoPreview = document.getElementById('photoPreview');
    photoInput.addEventListener('change', function () {
      const file = this.files[0];
      if (file) {
        photoPreview.src = URL.createObjectURL(file);
      }
    });

    function toggleDropdown() {
      const menu = document.getElementById('profileDropdown');
      menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    document.addEventListener('click', function (e) {
      const prof = document.querySelector('.profile-dropdown');
      if (!prof.contains(e.target)) {
        document.getElementById('profileDropdown').style.display = 'none';
      }
    });
  </script>
</body>
</html>
