        // Save changes to database
        // Save changes to database
async function saveChanges() {
    isSubmitting = true;
    const submitBtn = document.getElementById('submitBtn');
    
    submitBtn.classList.add('btn-loading');
    submitBtn.disabled = true;

    try {
        const formData = new FormData();
        
        // Add changed fields พร้อมการจัดการค่าพิเศษ
        Object.keys(currentData).forEach(key => {
            let value = currentData[key];
            
            // แปลง empty string เป็น null สำหรับฟิลด์ที่เกี่ยวข้องกับวันที่
            if ((key === 'dob' || key === 'work_start' || key === 'work_end') && 
                (!value || value === '' || value === 'null')) {
                value = null;
            }
            
            if (value !== (originalData[key] || '')) {
                formData.append(key, value || '');
            }
        });

        // Add photo if changed
        const photoInput = document.getElementById('photoInput');
        if (photoInput.files.length > 0) {
            formData.append('photo', photoInput.files[0]);
        }

        const response = await fetch(`/admin/dentists/${dentistId}/edit`, {
            method: 'POST',
            body: formData
        });

        if (response.ok) {
            if (response.redirected || response.url.includes('/admin/dentists')) {
                showToast('อัปเดตข้อมูลทันตแพทย์สำเร็จแล้ว!', 'success');
                setTimeout(() => {
                    window.location.href = '../../dentists';
                }, 1000);
            } else {
                const text = await response.text();
                if (text.includes('error') || text.includes('failed')) {
                    throw new Error('Failed to update dentist');
                } else {
                    showToast('อัปเดตข้อมูลทันตแพทย์สำเร็จแล้ว!', 'success');
                    setTimeout(() => {
                        window.location.href = '../../dentists';
                    }, 1000);
                }
            }
        } else {
            const errorText = await response.text();
            throw new Error(errorText || 'Failed to update dentist');
        }

    } catch (error) {
        console.error('Error updating dentist:', error);
        showToast('เกิดข้อผิดพลาดในการอัปเดต: ' + error.message, 'error');
    } finally {
        isSubmitting = false;
        submitBtn.classList.remove('btn-loading');
        submitBtn.disabled = false;
    }
}

        // Validate all form fields
        function validateAllFields() {
            const form = document.getElementById('editDentistForm');
            const requiredFields = form.querySelectorAll('.form-control[required]');
            let isValid = true;

            requiredFields.forEach(field => {
                if (!validateField(field)) {
                    isValid = false;
                }
            });

            return isValid;
        }

        // Load user information for avatar
        async function loadUserInfo() {
            try {
                const response = await fetch('../../profile/api');
                if (response.ok) {
                    const data = await response.json();
                    if (data.success) {
                        const firstLetter = data.email ? data.email.charAt(0).toUpperCase() : 'A';
                        document.getElementById('userAvatar').textContent = firstLetter;
                        
                        // Update user info in dropdown
