    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js'></script>
    <script>
        let notificationData = [];
        let calendar;
        let notificationDropdownOpen = false;

        // Initialize calendar and load data
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            
            document.getElementById('loading').style.display = 'block';
            
            calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                height: 'auto',
                eventDisplay: 'block',
                dayMaxEvents: false,
                events: [], // Will be loaded from API
                eventClick: handleCalendarEventClick,
                loading: function(isLoading) {
                    document.getElementById('loading').style.display = isLoading ? 'block' : 'none';
                },
                eventDidMount: function(info) {
                    info.el.title = info.event.title;
                }
            });
            
            calendar.render();
            
            // Load real data
            loadScheduleEvents();
            loadNotifications();

            // Auto-refresh every 60 seconds
            setInterval(() => {
                loadNotifications();
            }, 60000);
        });

        // Load schedule events from database
        async function loadScheduleEvents() {
            try {
                const response = await fetch('/admin/api/schedule');
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.success) {
                    calendar.removeAllEvents();
                    calendar.addEventSource(data.events);
                } else {
                    throw new Error(data.error || 'Failed to load schedules');
                }
            } catch (error) {
                console.error('Error loading schedule events:', error);
                showToast('Failed to load schedules: ' + error.message, 'error');
            } finally {
                document.getElementById('loading').style.display = 'none';
            }
        }

        // Load notifications from database
        async function loadNotifications() {
            try {
                // Simulate API call - replace with actual endpoint
                const response = await fetch('/admin/api/notifications');
                
                if (response.ok) {
                    const data = await response.json();
                    if (data.success) {
                        notificationData = data.notifications;
                    }
                } else {
                    // If API doesn't exist yet, create sample notifications from database data
                    await createSampleNotifications();
                }
                
                renderNotifications();
                updateNotificationBadge();
            } catch (error) {
                console.error('Error loading notifications:', error);
                // Create sample notifications as fallback
                await createSampleNotifications();
                renderNotifications();
                updateNotificationBadge();
            }
        }

        // Create sample notifications based on recent appointments
        async function createSampleNotifications() {
            try {
                // Get recent appointments and schedule changes
                const scheduleResponse = await fetch('/admin/api/schedule');
                const scheduleData = await scheduleResponse.json();
                
                notificationData = [];
                
                if (scheduleData.success && scheduleData.events) {
                    // Create notifications based on appointments
                    scheduleData.events.forEach((event, index) => {
                        if (event.extendedProps && event.extendedProps.hasAppointments) {
                            notificationData.push({
                                id: index + 1,
                                type: 'appointment',
                                title: 'New Appointment',
                                message: `Appointment scheduled with ${event.extendedProps.dentist}`,
                                date: new Date(event.start).toLocaleDateString('en-US', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }),
                                isRead: Math.random() > 0.3, // 70% chance of being unread
                                isNew: Math.random() > 0.7,  // 30% chance of being new
                                timestamp: new Date(event.start)
                            });
                        }
                    });
                }

                // Add some general notifications
                notificationData.unshift({
                    id: 'new_1',
                    type: 'appointment',
                    title: 'New Appointment Request',
                    message: 'Appointment from: Mr. Somchai Wongdee',
                    date: 'April 10, 2025 at 2:00 PM',
                    isRead: false,
                    isNew: true,
                    timestamp: new Date('2025-04-10T14:00:00')
                });

                notificationData.unshift({
                    id: 'new_2',
                    type: 'appointment',
                    title: 'Appointment Request',
                    message: 'Appointment from: Mr. Nithipol Pronpa',
                    date: 'April 11, 2025 at 3:00 PM',
                    isRead: false,
                    isNew: false,
                    timestamp: new Date('2025-04-11T15:00:00')
                });
            } catch (error) {
                console.error('Error creating sample notifications:', error);
            }
        }

        // Render notifications in dropdown
        function renderNotifications() {
            const notificationContent = document.getElementById('notificationContent');
            
            if (notificationData.length === 0) {
                notificationContent.innerHTML = `
                    <div class="no-notifications">
                        <i class="fas fa-bell-slash" style="font-size: 24px; margin-bottom: 10px; color: #ccc;"></i>
                        <p>No notifications</p>
                    </div>
                `;
                return;
            }

            // Sort by timestamp (newest first)
            const sortedNotifications = notificationData.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
            
            notificationContent.innerHTML = sortedNotifications.map(notification => `
                <div class="notification-item ${!notification.isRead ? 'unread' : ''}" data-id="${notification.id}">
                    <div class="notification-text">
                        ${notification.isNew ? '<span class="new-tag">New</span>' : ''}
                        <strong>${notification.title}:</strong> ${notification.message}
                    </div>
                    <div class="notification-date">${notification.date}</div>
                    <div class="notification-actions">
                        <button class="notification-btn view-details-btn" onclick="viewNotificationDetails('${notification.id}')">
                            View Details
                        </button>
                        ${!notification.isRead ? `
                            <button class="notification-btn mark-read-btn" onclick="markAsRead('${notification.id}')">
                                Mark as read
                            </button>
                        ` : ''}
                    </div>
                </div>
            `).join('');
        }

        // Update notification badge
        function updateNotificationBadge() {
            const unreadCount = notificationData.filter(n => !n.isRead).length;
            const badge = document.getElementById('notificationBadge');
            
            if (unreadCount > 0) {
                badge.textContent = unreadCount > 99 ? '99+' : unreadCount;
                badge.classList.add('show');
            } else {
                badge.classList.remove('show');
            }
        }

        // Toggle notifications dropdown
        function toggleNotifications() {
            const dropdown = document.getElementById('notificationDropdown');
            notificationDropdownOpen = !notificationDropdownOpen;
            
            if (notificationDropdownOpen) {
                dropdown.classList.add('show');
                loadNotifications(); // Refresh when opening
            } else {
                dropdown.classList.remove('show');
            }
        }

        // View notification details
        function viewNotificationDetails(id) {
            const notification = notificationData.find(n => n.id == id);
            if (notification) {
                // Mark as read
                notification.isRead = true;
                notification.isNew = false;
                
                // Show modal with details
                showNotificationModal(notification);
                
                // Update UI
                renderNotifications();
                updateNotificationBadge();
                
                // In real app, send to server
                markNotificationAsReadInDatabase(id);
            }
        }

        // Show notification detail modal
        function showNotificationModal(notification) {
            const modal = document.getElementById('notificationModal');
            const modalTitle = document.getElementById('modalTitle');
            const modalBody = document.getElementById('modalBody');
            
            modalTitle.textContent = notification.title;
            modalBody.innerHTML = `
                <div style="margin-bottom: 20px;">
                    <p style="margin: 0 0 10px 0; color: #333; line-height: 1.5;"><strong>Message:</strong> ${notification.message}</p>
                    <p style="margin: 0 0 10px 0; color: #666; font-size: 13px;">
                        <i class="fas fa-clock"></i> ${notification.date}
                    </p>
                    <p style="margin: 0; color: #666; font-size: 13px;">
                        <i class="fas fa-tag"></i> Type: ${notification.type}
                    </p>
                </div>
                <div style="text-align: right;">
                    <button onclick="closeNotificationModal()" style="
                        background: #4A90E2;
                        color: white;
                        border: none;
                        padding: 10px 20px;
                        border-radius: 6px;
                        cursor: pointer;
                        font-size: 14px;
                    ">Close</button>
                </div>
            `;
            
            modal.style.display = 'flex';
        }

        // Close notification modal
        function closeNotificationModal() {
            const modal = document.getElementById('notificationModal');
            modal.style.display = 'none';
        }

        // Mark notification as read
        function markAsRead(id) {
            const notification = notificationData.find(n => n.id == id);
            if (notification) {
                notification.isRead = true;
                notification.isNew = false;
                
                renderNotifications();
                updateNotificationBadge();
                showToast('Notification marked as read', 'success');
                
                // In real app, send to server
                markNotificationAsReadInDatabase(id);
            }
        }

        // Mark all notifications as read
        function markAllAsRead() {
            const unreadCount = notificationData.filter(n => !n.isRead).length;
            
            if (unreadCount === 0) {
                showToast('No unread notifications', 'info');
                return;
            }
            
            notificationData.forEach(n => {
                n.isRead = true;
                n.isNew = false;
            });
            
            renderNotifications();
            updateNotificationBadge();
            showToast(`${unreadCount} notifications marked as read`, 'success');
            
            // In real app, send to server
            markAllNotificationsAsReadInDatabase();
        }

        // Handle calendar event click
        function handleCalendarEventClick(info) {
            const event = info.event;
            const props = event.extendedProps;
            
            let modalContent = `
                <div style="margin-bottom: 20px;">
                    <p style="margin: 0 0 10px 0;"><strong>Event:</strong> ${event.title}</p>
                    <p style="margin: 0 0 10px 0;"><strong>Date:</strong> ${event.start.toDateString()}</p>
            `;
            
            if (props) {
                if (props.dentist) modalContent += `<p style="margin: 0 0 10px 0;"><strong>Dentist:</strong> ${props.dentist}</p>`;
                if (props.specialty) modalContent += `<p style="margin: 0 0 10px 0;"><strong>Specialty:</strong> ${props.specialty}</p>`;
                if (props.startTime && props.endTime) modalContent += `<p style="margin: 0 0 10px 0;"><strong>Time:</strong> ${props.startTime} - ${props.endTime}</p>`;
